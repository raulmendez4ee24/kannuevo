DATABASE_URL="postgresql://kanlogic:kanlogic@localhost:5432/kanlogic?schema=public"
APP_ORIGIN="http://localhost:5173"
PORT=3001
COOKIE_SECURE=false
SESSION_TTL_DAYS=7
SEED_DEMO=true

# Email Configuration (REQUERIDO para que lleguen los emails)
# SMTP_PASS es obligatorio - sin él los emails solo se muestran en consola
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_correo@gmail.com           # Cuenta Gmail que envía los emails
SMTP_PASS=tu_app_password_de_gmail      # Contraseña de aplicación de Gmail (no la normal)
NOTIFICATION_EMAIL=tu_correo@gmail.com  # Correo donde llegan pagos, auditorías y contactos

# Payment Encryption Key (genera una clave de 64 caracteres hex para AES-256)
# Puedes generar una con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PAYMENT_ENCRYPTION_KEY=tu_clave_de_64_caracteres_hex_aqui

# Stripe Configuration (opcional - solo si quieres usar Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
